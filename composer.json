{
    "name": "php-http/httplug-bundle",
    "description": "Symfony bundle to integrate the Httplug generic HTTP client into Symfony",
    "type": "symfony-bundle",
    "keywords": ["http", "discovery", "adapter", "message", "factory", "bundle", "httplug", "php-http"],
    "homepage": "http://httplug.io",
    "license": "MIT",
    "authors": [
        {
            "name": "David Buchmann",
            "email": "mail@davidbu.ch"
        }
    ],
    "require": {
        "php": ">=5.5",
        "php-http/discovery": "^0.6.3",
        "php-http/client-implementation": "^1.0",
        "php-http/message-factory": "^1.0",
        "php-http/plugins": "^0.2.0",
        "symfony/framework-bundle": "^2.7|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.4",
        "php-http/guzzle6-adapter": "^0.3.1",
        "php-http/message": "^0.2.1",
        "symfony/symfony": "^2.7|^3.0",
        "polishsymfonycommunity/symfony-mocker-container": "~1.0",
        "matthiasnoback/symfony-dependency-injection-test": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "Http\\HttplugBundle\\": ""
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
